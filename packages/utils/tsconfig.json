{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "rootDir": "src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
        },
        "lib": [
            "ESNext",
            "DOM",
        ],
        "typeRoots": [
            "./node_modules/@types",
        ],
        "moduleResolution": "node",
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
        }
    },
    "tsc-alias": {
        "verbose": false,
        "resolveFullPaths": true,
    }
}
