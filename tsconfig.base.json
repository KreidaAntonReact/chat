{
    "compilerOptions": {
        "composite": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es2022",
        "moduleResolution": "node",
        "checkJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strict": true,
    },
    "exclude": [
        "**/*/packages/eslint-config/**",
    ]
}
